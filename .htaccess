# Security and routing baseline
Options -Indexes

# Protect sensitive folders
<Directory "/inc">
  Deny from all
</Directory>
<Directory "/config">
  Deny from all
</Directory>

# Restrict direct access to config/php files at root if any
<FilesMatch "^(config|database)\.php$">
  Deny from all
</FilesMatch>

# Basic PHP settings (adjust per hosting)
php_value session.cookie_httponly 1
php_value session.use_strict_mode 1
